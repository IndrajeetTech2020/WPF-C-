<Window
    x:Class="DragDropDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:introduction="clr-namespace:DragDropDemo.Views"
    xmlns:local="clr-namespace:DragDropDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Drag Drop"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <introduction:CanvasView
            Grid.Column="1"
            RectangleDropCommand="{Binding SaveRectangleCommand}"
            RectangleRemoveCommand="{Binding DeleteRectangleCommand}"
            RemoveRectangleName="{Binding RemoveRectangleName}"
            Color="Blue" />
    </Grid>
</Window>
